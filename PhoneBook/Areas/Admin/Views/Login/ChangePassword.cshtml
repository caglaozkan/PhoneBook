
@model PhoneBook.Areas.Admin.Models.LoginViewModel
@{
    Layout = null;
}
<head>
    <link href="~/Content/AdminHomeform.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<div class="container">
    @using (Html.BeginForm("ChangePassword", "Login", new { Area = "Admin" }, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        @Html.HiddenFor(x => x.WorkerId)



        <div class="col-md-5">
            <div class="form-area">
                <form role="form">
                    <br style="clear:both">
                    <h3 style="margin-bottom: 25px; text-align: center;"> Şifre Degiştir</h3>
                    <div class="form-group">
                        <label class="form-label" for="Name"> Kullanıcı Adı</label>
                        @Html.TextBoxFor(x => x.email, new { @class = "form-control", @readonly = "readonly" })

                    </div>
                    <div class="form-group">
                        <label class="form-label" for="Password">Password</label>
                        @Html.TextBoxFor(x => x.password, new { @class = "form-control",@type="password" })

                    </div>
                    <button type="submit" name="submit" class="btn btn-primary pull-right">Kaydet</button>
                </form>
            </div>
        </div>
    }

</div>

<script src="~/Content/js/form.js"></script>






